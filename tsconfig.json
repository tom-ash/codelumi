{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/jest",
      "@types/react"
    ],
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "allowUnreachableCode": false,
    "experimentalDecorators": true
  },
  "include": [
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
  ]
}
